@inject SignInManager<IdentityUser> SignInManager
@using Microsoft.AspNetCore.Identity

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PediloOnline</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/rubros.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PediloOnline.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="~/fontawesome/css/all.min.css" />
</head>

<body>
    <!-- Botón para mostrar/ocultar el menú lateral -->
    <button class="menu-toggle" id="menuToggle">☰</button>
    <div class="sidebar" id="sidebarMenu">
        <div class="sidebar-header">
            <h4 class="text-white text-center">PediloOnline</h4>
        </div>
        <a href="@Url.Action("Index", "Home")"><i class="fa-solid fa-house pe-2"></i>Home</a>
        <a href="@Url.Action("Privacy", "Home")"><i class="fa-solid fa-eye-slash pe-2"></i>Privacy</a>
        <a href="@Url.Action("Index", "Productos")"><i class="fa-solid fa-shop pe-2"></i>Productos</a>
        <a href="@Url.Action("Index", "Carrito")"><i class="fa-solid fa-cart-shopping pe-2"></i>Carrito</a>
        <a href="@Url.Action("Clientes", "Clientes")"><i class="fa-solid fa-users pe-2"></i>Clientes</a>
        <a href="@Url.Action("Index", "Empresas")"><i class="fa-solid fa-business-time pe-2"></i>Empresa</a>
        <a href="@Url.Action("Index", "Localidades")"><i class="fa-solid fa-city pe-2"></i>Localidades</a>
         <div class="dropdown">
        <a href="" class="dropdown-toggle" id="rubrosDropdown">
             <i class="fa-solid fa-gear pe-2"></i>Rubros</i> 
        </a>
        <div class="dropdown-menu" id="rubrosMenu">
            <a href="@Url.Action("Index", "Rubros")"><i class="fa-solid fa-gear pe-2"></i>Rubros</a>
            <a href="@Url.Action("Index", "Subrubros")"><i class="fa-solid fa-gears pe-2"></i>SubRubros</a>
        </div>
    </div>
        <a href="@Url.Action("Index", "Marcas")"><i class="fa-solid fa-tag pe-2"></i>Marcas</a>
    </div>
    <header>
        <nav class="fixed-top navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-color border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

        <div class="main-content">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="border-top footer text-muted"></footer>

    }
    else
    {
        <div class="main-content">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    }



<div class="loader-container" id="loader">
        <svg height="108px" width="108px" viewBox="0 0 128 128" class="loader">
            <defs>
                <clipPath id="loader-eyes">
                    <circle transform="rotate(-40,64,64) translate(0,-56)" r="8" cy="64" cx="64" class="loader__eye1"></circle>
                    <circle transform="rotate(40,64,64) translate(0,-56)" r="8" cy="64" cx="64" class="loader__eye2"></circle>
                </clipPath>
                <linearGradient y2="1" x2="0" y1="0" x1="0" id="loader-grad">
                    <stop stop-color="#000" offset="0%"></stop>
                    <stop stop-color="#fff" offset="100%"></stop>
                </linearGradient>
                <mask id="loader-mask">
                    <rect fill="url(#loader-grad)" height="128" width="128" y="0" x="0"></rect>
                </mask>
            </defs>
            <g stroke-dasharray="175.93 351.86" stroke-width="12" stroke-linecap="round">
                <g>
                    <rect clip-path="url(#loader-eyes)" height="64" width="128" fill="hsl(193,90%,50%)"></rect>
                    <g stroke="hsl(193,90%,50%)" fill="none">
                        <circle transform="rotate(180,64,64)" r="56" cy="64" cx="64" class="loader__mouth1"></circle>
                        <circle transform="rotate(0,64,64)" r="56" cy="64" cx="64" class="loader__mouth2"></circle>
                    </g>
                </g>
                <g mask="url(#loader-mask)">
                    <rect clip-path="url(#loader-eyes)" height="64" width="128" fill="hsl(223,90%,50%)"></rect>
                    <g stroke="hsl(223,90%,50%)" fill="none">
                        <circle transform="rotate(180,64,64)" r="56" cy="64" cx="64" class="loader__mouth1"></circle>
                        <circle transform="rotate(0,64,64)" r="56" cy="64" cx="64" class="loader__mouth2"></circle>
                    </g>
                </g>
            </g>
        </svg>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/fontawesome/js/all.min.js"></script>
    <script src="~/js/scripts.js"></script>
    <script src="~/js/loader.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>
