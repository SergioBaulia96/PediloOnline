@{
  ViewData["Title"] = "Rubros";
}

<div class="text-center">
  <h1 class="display-4">Rubros</h1>
</div>

<!-- Modal Rubro-->
<div class="modal fade" id="ModalRubros" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="tituloModal">Nuevo Rubro</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form>
          <input type="show" id="rubroID" value="0" />
          <div class="row">
            <div class="mb-3 col-12">
              <label for="rubroNombre" class="form-label">NUEVO RUBRO</label>
              <input type="text" class="form-control" id="rubroNombre" placeholder="INGRESE EL NOMBRE DEL RUBRO"
                oninput="textoMayuscula(this)">
              <span id="errorMensajeNombre" style="color:red; display:none; font-size: 15px; padding-left: 4px;">
                <i class="fa-solid fa-circle-exclamation pe-1"></i>Debe ingresar un nombre
              </span>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer d-flex justify-content-center">
        <button type="button" class="btn-ovalo ancho-boton" data-bs-dismiss="modal">CANCELAR</button>
        <button type="button" class="btn-ovalo ancho-boton" 
          onclick="CargarRubro()">GUARDAR</button>
      </div>
    </div>
  </div>
</div>

<!--Barra de busqueda rubro-->
<div class="input-group rounded">
  <input id="buscarRubro" type="text" class="form-control rounded" placeholder="BUSCAR RUBRO" aria-label="Search"
    aria-describedby="search-addon" />
  <span class="input-group-text border-0" id="search-addon">
    <i class="fas fa-search"></i>
  </span>
</div>

<!--Tabla Rubro-->
<table class="table">
  <thead>
    <tr>
      <th>Rubro</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody id="tbody-rubro">

  </tbody>
</table>


